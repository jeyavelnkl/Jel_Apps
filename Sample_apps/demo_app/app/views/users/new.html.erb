<h1>sign up</h1>

<%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <table>
      <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name, class: 'form-control' %></td>
      </tr>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email, class: 'form-control' %></td>
      </tr>
      <tr>
      	<td><%= f.label :password %></td>
        <td><%= f.password_field :password, class: 'form-control' %></td>
      </tr>
      <tr>
         <td><%= f.label :password_confirmation, "Confirmation" %></td>
         <td><%= f.password_field :password_confirmation, class: 'form-control' %></td>
      </tr>
      <tr colspan = 2>
         <td><%= f.submit "Create my account", class: "btn btn-primary" %></td>
      </tr>
      </table>
<% end %>