<h1>Welcome, <%= current_employee.name %> </h1>

<% if can? :create, Employee %>
	<%= link_to 'New Employee', new_employee_path %>
<% end %>

<% if can? :create, Project %>
	<%= link_to 'New Project', new_project_path %>
<% end %>

<% if can? :read, Employee %>
	<%= link_to 'Employee List', employees_path %>
<% end %>

<% if can? :read, Project %>
	<%= link_to 'Project List', projects_path %>
<% end %>

<%= link_to 'Personal details', employee_path(current_employee.id) %>
