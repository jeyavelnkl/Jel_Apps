<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>GeoCoder</title>
  <%= csrf_meta_tags %>
  <%= action_cable_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
</head>

<body>
<nav class="navbar navbar-dark bg-inverse">
  <%= link_to 'GeoCoder', root_path, class: 'navbar-brand' %>

  <ul class="nav navbar-nav">
    <li class="nav-item">
      <%= link_to 'Places', places_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Add Place', new_place_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Edit Place', edit_index_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Distance between places', new_distance_path, class: 'nav-link' %>
    </li>

    <li class="nav-item">
      <%= link_to 'Directions Source to Destination', directions_path , class: 'nav-link' %>
    </li>

    <li class="nav-item">
      <%= link_to 'Directions route', directionswithpanel_path , class: 'nav-link' %>
    </li>

  </ul>
</nav>

<div class="container">
  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg.html_safe, class: "alert alert-#{name}") %>
  <% end %>

  <%= yield %>
</div>

<footer>
  <div class="container">
    <p class="text-muted">Created by <%= link_to 'Jeyavel', '#' %></p>
  </div>
</footer>
</body>
</html>
