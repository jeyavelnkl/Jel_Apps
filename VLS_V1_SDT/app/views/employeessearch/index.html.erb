<h1>Employees Skill Search</h1>

<div class="row">
<%= form_tag employeessearch_index_path, :method => :get do %>
    <div>
        
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "Search", :name => "nil" %>
        
    </div>
<% end %>
</div>

<% if @employees.empty? %>
    <p>No Skill matched</p>
<% else %>
   <ul>
      <% @employees.each do |employee| %>
      <div><%= employee.name %></div>
      <%end%>
   </ul>
<%end%>
